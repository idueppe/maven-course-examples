<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>tar</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>org.apache.tomcat:tomcat:*</include>
			</includes>
			<unpackOptions>
				<includes>
					<include>apache-tomcat-${tomcat.version}/**/*</include>
				</includes>
				<excludes>
					<exclude>apache-tomcat-${tomcat.version}/webapps/**/*</exclude>
				</excludes>
			</unpackOptions>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<outputDirectory>apache-tomcat-${tomcat.version}/lib/</outputDirectory>
			<includes>
				<include>log4j:log4j:*</include>
				<include>mysql:mysql-connector-java:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>apache-tomcat-${tomcat.version}/webapps</outputDirectory>
			<includes>
				<include>org.drools:drools-guvnor:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
